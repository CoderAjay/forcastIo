{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es6"],
        "types": ["reflect-metadata"],
        "rootDir": "source/",
        "outDir": "dist/"
    },
    "exclude": [
        "node_modules"
    ]

}
